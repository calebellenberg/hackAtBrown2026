{
  "manifest_version": 3,
  "name": "Stopify",
  "version": "1.0",
  "host_permissions": [
    "http://localhost:8000/*",
    "http://172.26.57.128:8000/*"
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "tracker.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "camera.html",
        "gambling_sites.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}